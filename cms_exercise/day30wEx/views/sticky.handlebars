<div class="text-center">
    <h1>Sticky Notes - {{title}}</h1>
</div>

<div class="p-3">
    <form class="form" action="" method="POST">
        <div class="text-center">
            <label class="boxbox">
                <textarea name="message" id="" cols="30" rows="5" class="form-control textarea" wrap="hard" placeholder="input your text here..."
                    required></textarea>
                <p class="textC">250/250</p>
            </label>
        </div>
        <div class="text-center">
            <label class="textBox">
                <input type='submit' value="submit" class="btn btn-outline-dark" />
            </label>
        </div>
    </form>
</div>


<div>
    <table id="fileList" class="table table-striped text-center">
        <thead>
            <tr>
                <th>Message</th>
                <th>Remove</th>
            </tr>
        </thead>

        {{#each message as |value key|}}
        <tr>
            <th>{{value}}</th>
            <th><button type="button" class="btn btn-outline-danger" onclick="edit({{key}})">Edit</button></th>
            <th><button type="button" class="btn btn-outline-danger" onclick="sendDelete({{key}})">Remove</button></th>
        </tr>
        {{/each}}
    </table>
</div>


